<Window x:Class="DesignAssignment2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="111*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"  BorderBrush="{DynamicResource buttonStyleGradientGray}" BorderThickness="2,20,2,2" SnapsToDevicePixels="True"  Margin="10" >
            <Grid Background="DarkGray" >
                <TextBlock Text="Regular Event" Foreground="#FFBF41" Margin="0,-20,0,0"/>
                <WrapPanel Margin="10">
                <Button Template="{DynamicResource GlassButtonSignal}" Content="Publish">
                </Button>
                <Button Template="{DynamicResource GlassButtonKill}" Content="Kill"></Button>
                <Button Template="{DynamicResource GlassButtonRecompose}" Content="Recompose"></Button>
                </WrapPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
