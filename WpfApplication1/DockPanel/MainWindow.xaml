<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Button Height="25"
                Background="Red"
                DockPanel.Dock="Top"
                ></Button>
        <Button Width="25"
                Background="Orange"
                DockPanel.Dock="Left"
                ></Button>
        <Button Width="25"
                Background="Green"
                DockPanel.Dock="Right"
                ></Button>
        <Button Height="25"
                Background="Purple"
                DockPanel.Dock="Bottom"
                ></Button>
        <Button Background="Aqua"
                ></Button>
    </DockPanel>
</Window>
