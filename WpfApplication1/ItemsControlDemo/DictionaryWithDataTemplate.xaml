<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:dts="clr-namespace:ItemsControlDemo"
                    >
    <DataTemplate x:Key="dtYoungerThanThirty">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding Age}" Foreground="{StaticResource myBrush1}"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="dtThirtyOrOlder">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding Age}" Foreground="{StaticResource myBrush}"/>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="dyFiftyorOlder">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding Age}" Foreground="{StaticResource myBrush2}"/>
        </StackPanel>
    </DataTemplate>
   
</ResourceDictionary>